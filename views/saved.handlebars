<nav class="navbar navbar-expand-sm navbar-light bg-light">
  <a class="navbar-brand font-weight-bold" href="/">Home-Space.com-Scrape</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link active font-weight-bold" href="/saved"> Saved Articles <span class="sr-only">(current)</span></a>
      <a class="nav-item nav-link active" href="/scrape"> New Scrape </a>
      <a class="nav-item nav-link" href="/articles"> Articles API </a>
    </div>
  </div>
</nav>

<div class="jumbotron jumbotron-fluid">
  <div class="text-white container text-center">
    <h1 class="display-4 font-weight-bold">Science & Tech News From Space.com!</h1>
    <br>
    <h3>Your Saved Articles</h3>
  </div>
</div>

<div id="article">
<ul>
  {{#each articles}}
      <img src="{{image}}" class="article-image" "alt="article picture">
      <a href="{{link}}" target="_blank"><h3>{{title}}</h3></a>
      <h4>{{summary}}</h4>
      <button id="unsave-article" class="btn btn-primary btn-lg" type="save" data-id="{{_id}}">Unsave Article</button>
    <button id="note-modal" type="submit" data-id="{{_id}}" class="btn btn-secondary btn-lg" data-toggle="modal"
      data-target="#{{_id}}">Add/View Note</button>

    <div class="modal" id="{{_id}}" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">{{title}}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div id="notes" class="modal-body">
            {{!-- <p></p>Notes get appended here.</p> --}}
          </div>
          <div class="form-group">
            <textarea type="text" class="form-control" id="noteInput" id="exampleFormControlTextarea1" rows="5" placeholder="Type Your Notes Here"></textarea>
          </div>
          <div class="modal-footer">
            <button type="button" id="add-note" data-id="{{_id}}" class="btn btn-primary">Save Note</button>
            <button type="button" id="delete-note" data-id="{{_id}}" class="btn btn-danger">Delete Note</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
      <hr>
      
  {{/each}}
</ul>
</div>